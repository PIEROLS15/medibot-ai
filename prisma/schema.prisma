generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  Int       @id @default(autoincrement())
  firstName           String
  lastName            String
  email               String    @unique
  password            String?
  resetToken          String?
  resetTokenExpiresAt DateTime?
  roleId              Int
  googleId            String?   @unique
  profileImage        String?
  isActive            Boolean   @default(true)
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  role                Role      @relation(fields: [roleId], references: [id])
}

model Role {
  id    Int      @id @default(autoincrement())
  name  RoleType @unique
  users User[]
}

model Patient {
  id                   Int                 @id @default(autoincrement())
  identificationId     Int
  identificationNumber String              @unique
  fullName             String
  age                  Int
  identification       IdentificationType  @relation(fields: [identificationId], references: [id])
  medicationHistory    MedicationHistory[]
}

model IdentificationType {
  id      Int                @id @default(autoincrement())
  type    TypeIdentification @unique
  Patient Patient[]
}

model Medication {
  id           Int      @id @default(autoincrement())
  name         String
  description  String?
  sideEffects  String?
  interactions String?
  createdAt    DateTime @default(now())
}

model MedicationHistory {
  id             Int            @id @default(autoincrement())
  medicationId   Int
  createdAt      DateTime       @default(now())
  resultOptionId Int?
  patientId      Int
  resultOption   ResultOptions? @relation(fields: [resultOptionId], references: [id])
  patient        Patient        @relation(fields: [patientId], references: [id])
}

model ResultOptions {
  id                Int                 @id @default(autoincrement())
  type              TypeResultOptions   @unique
  medicationHistory MedicationHistory[]
}

enum RoleType {
  Administrator
  Pharmacist
  Visitor
}

enum TypeIdentification {
  DNI
  RUC
}

enum TypeResultOptions {
  Improved
  No_changes
}
